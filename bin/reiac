#!/usr/bin/env escript

main([]) ->
  usage();
main(["-h"]) ->
  usage();
main(["--help"]) ->
  usage();
main([File]) ->
  init(),
  result(reiac:file(File));
main(Options) ->
  init(),
  case Options of
    ["-o", Outfile, Infile] ->
      result(reiac:file(Infile, Outfile));
    _ ->
      usage()
  end.

init() ->
  code:add_pathz("./ebin"),
  code:add_pathz("../ebin"),
  code:add_pathz("./src/smart_exceptions"),
  code:add_pathz("../src/smart_exceptions").
  
usage() ->
  io:format("Usage: reiac [options] file.ra~n"),
  io:format("Options:~n"),
  io:format("    -o filename    location of output file~n"),
  halt(1).
  
result(Result) ->
  case Result of
    {ok, _} ->
      void;
    {error, Err} ->
      io:format("Error: ~s~n", [Err]),
      halt(1)
  end.
